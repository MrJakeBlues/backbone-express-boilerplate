root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = false
indent_size = 4
indent_style = space
trim_trailing_whitespace = true

[*.scss]
indent_size = 2

[*.json]
indent_size = 2

[.eslintrc]
indent_size = 2

[*.min.*]
insert_final_newline = ignore
indent_style = ignore
trim_trailing_whitespace = false

[*.md]
trim_trailing_whitespace = false